#!/bin/sh
# postinst script for loudml
#
# see: dh_installdeb(1)

set -e

# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# creating loudml group if it isn't already there
if ! getent group loudml >/dev/null; then
        addgroup --system loudml >/dev/null
fi

# creating loudml user if he isn't already there
if ! getent passwd loudml >/dev/null; then
        adduser \
          --system \
          --ingroup loudml \
          --home /var/run/loudml/ \
          --gecos "loudml user" \
          --shell /bin/false \
          loudml  >/dev/null
fi

case "$1" in
    configure)
        mkdir -p /etc/loudml/plugins.d
        mkdir -p /var/lib/loudml
	chown loudml:loudml /var/lib/loudml
	chmod 2775 /var/lib/loudml
	chown loudml:loudml /opt/venvs/loudml
        ln -sf /opt/venvs/loudml/bin/loudmld /usr/bin/loudmld
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
